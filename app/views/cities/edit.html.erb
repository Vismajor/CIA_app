<%= form_for @city do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :population %>
  <%= f.number_field :population %>
  <br>
  <% @countries = Country.all %>
  <%= f.label :country_id %>
  <%= f.select :country_id, options_from_collection_for_select(@countries, 'id', 'name') %>
  <br>
  <%= f.submit 'City!' %>

<% end %>